@model QL_BangKiem_KhaoSat.Models.GiamSat

<h1>BẢNG GIÁM SÁT NGƯỜI BỆNH</h1>

<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>NỘI DUNG</th>
            <th>Đạt (1đ)</th>
            <th>Chưa đạt (0.5đ)</th>
            <th>Không đạt (0đ)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CacBuocTienHanh)
        {
            <tr>
                <td>@item.STT</td>
                <td>@Html.Raw(item.MoTa.Replace("\n", "<br />"))</td>
                <td><input type="radio" name="trangThai_@item.STT" value="Dat" data-stt="@item.STT" /></td>
                <td><input type="radio" name="trangThai_@item.STT" value="ChuaDat" data-stt="@item.STT" /></td>
                <td><input type="radio" name="trangThai_@item.STT" value="KhongDat" data-stt="@item.STT" /></td>
            </tr>
        }
    </tbody>
</table>

<div>
    <label for="ghiChu">Ghi chú:</label><br />
    <textarea id="ghiChu" name="ghiChu" rows="5" cols="80">@Model.GhiChu</textarea>
</div>

<button id="btnLuuKetQua" class="btn btn-primary">Lưu Kết Quả</button>

@section scripts {
    <script>
        $(document).ready(function () {
            $('input[type="radio"]').on('change', function () {
                var stt = $(this).data('stt');
                $('input[name="trangThai_' + stt + '"]').not(this).prop('checked', false);
            });

            $('#btnLuuKetQua').on('click', function () {
                var ketQua = [];
                $('input[type="radio"]:checked').each(function () {
                    ketQua.push({
                        STT: $(this).data('stt'),
                        TrangThai: $(this).val()
                    });
                });

                var ghiChu = $('#ghiChu').val(); // Lấy giá trị từ textarea

                // Gửi dữ liệu kết quả và ghi chú lên server bằng AJAX
                $.ajax({
                    url: '/GiamSat/LuuKetQua',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ ketQua: ketQua, ghiChu: ghiChu }), // Gửi cả ketQua và ghiChu
                    success: function (response) {
                        if (response.success) {
                            alert('Kết quả và ghi chú đã được lưu!');
                            // Có thể thực hiện các hành động khác sau khi lưu thành công
                        } else {
                            alert('Lỗi khi lưu kết quả.');
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi khi gửi yêu cầu.');
                    }
                });
            });
        });
    </script>
}

