<!DOCTYPE html>
    <html lang="vi">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Bảng Kiểm Thực Hiện Kỹ Thuật - Khoa và Ngày bên dưới logo</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                background: #f0f0f0;
                margin: 0;
                padding: 20px;
                display: flex;
                justify-content: center;
            }

            .a4-container {
                background: white;
                width: 794px;
                min-height: 1123px;
                padding: 20px 15px;
                box-sizing: border-box;
                box-shadow: 0 0 10px rgba(0,0,0,0.2);
                position: relative;
            }

            .logo {
                width: 308px;
                height: 52px;
                background: #ccc;
                font-weight: bold;
                font-size: 18px;
                line-height: 52px;
                text-align: center;
                margin-bottom: 5px;
            }

            .info-row {
                display: flex;
                justify-content: space-between;
                font-size: 14px;
                margin-bottom: 15px;
            }

            .department, .date {
                flex: 1;
                display: flex;
                align-items: center;
            }

                .department input[type="text"], .date input[type="date"] {
                    margin-left: 8px;
                    flex: 1;
                    padding: 4px 6px;
                    font-size: 14px;
                }

            .department {
                margin-right: 20px;
            }

            .title {
                text-align: center;
                font-weight: bold;
                font-size: 18px;
                margin-bottom: 15px;
                clear: both;
            }

            .group-row {
                display: flex;
                flex-wrap: wrap;
                margin-bottom: 10px;
                gap: 20px;
                align-items: center;
            }

            .checkbox-label {
                display: flex;
                align-items: center;
                gap: 6px;
                font-size: 14px;
            }

                .checkbox-label input[type="checkbox"] {
                    width: 16px;
                    height: 16px;
                }

            table {
                width: 100%;
                border-collapse: collapse;
                font-size: 14px;
                margin-top: 20px;
            }

            th, td {
                border: 1px solid #000;
                padding: 6px 8px;
                text-align: center;
                vertical-align: middle;
            }

            th {
                background: #eee;
            }

            tbody tr:nth-child(even) {
                background: #f9f9f9;
            }

            tbody td:nth-child(2) {
                text-align: left;
                padding-left: 10px;
            }

            .ddtk-label {
                margin-top: 20px;
                text-align: right;
                font-weight: bold;
                font-size: 14px;
            }
        </style>
    </head>
    <body>

        <div class="a4-container">

            <!-- Logo -->
            <div class="logo">LOGO</div>

            <!-- Khoa và Ngày giám sát bên dưới logo -->
            <div class="info-row">
                <div class="department">Khoa: <input type="text" /></div>
                <div class="date">Ngày giám sát: <input type="date" /></div>
            </div>

            <div class="title">
                BẢNG GIÁM SÁT NGƯỜI BỆNH ĐƯỢC ĐIỀU DƯỠNG THỰC HIỆN Y LỆNH THUỐC THEO ĐÚNG CHỈ ĐỊNH, BẢO ĐẢM AN TOÀN VÀ HIỆU QUẢ.
            </div>

            <!-- Nhóm checkbox -->
            <div class="group-row">
                <label class="checkbox-label">
                    <input type="checkbox" /> 1.1 Tiếp nhận NB đăng ký khám bệnh
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" /> 1.2 Tư vấn
                </label>
            </div>

            <div class="group-row">
                <label class="checkbox-label">
                    <input type="checkbox" /> 2.1 Thanh toán viện phí
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" /> 2.2 Thu phí cận lâm sàng
                </label>
            </div>

            <div class="group-row">
                <label class="checkbox-label">
                    <input type="checkbox" /> 3.1 Cấp phát thuốc
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" /> 3.2 Cấp phát toa thuốc
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" /> 3.3 Cấp phiếu hẹn
                </label>
            </div>

            <div class="group-row">
                <label class="checkbox-label">
                    <input type="checkbox" /> 4.1 Thực hiện cận lâm sàng
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" /> 4.2 Cấp phát chỉ định cận lâm sàng
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" /> 4.3 Trả kết quả CLS
                </label>
            </div>

            <div class="group-row">
                <label class="checkbox-label">
                    <input type="checkbox" /> 5.1 Thực hiện kỹ thuật
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" /> 5.2 Thực hiện thủ thuật
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" /> 5.3 Thực hiện phẫu thuật
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" /> 5.4 Thực hiện CLS
                </label>
            </div>

            <div class="group-row">
                <label class="checkbox-label">
                    <input type="checkbox" /> 6.1 Nhập viện
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" /> 6.2 Chuyển khoa
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" /> 6.3 Chuyển viện
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" /> 6.4 Xuất viện
                </label>
            </div>

            <table border="1" cellspacing="0" cellpadding="5" style="width:100%; border-collapse: collapse;">
                <thead>
                    <tr>
                        <th rowspan="2" style="width:6%;">STT</th>
                        <th rowspan="2" style="width:35%;">Các bước tiến hành</th>
                        <th colspan="3" style="width:29%; text-align:center;">
                            NVYT Thực hiện
                            <br>
                            <input type="text" placeholder="Nhập ghi chú..." style="width:90%; margin-top:4px;">
                        </th>
                        <th colspan="3" style="width:29%; text-align:center;">
                            NVYT Thực hiện
                            <br>
                            <input type="text" placeholder="Nhập ghi chú..." style="width:90%; margin-top:4px;">
                        </th>
                    </tr>
                    <tr style="text-align:center;">
                        <th>Thực hiện đầy đủ (1đ)</th>
                        <th>Thực hiện chưa đạt (0.5đ)</th>
                        <th>Không thực hiện (0đ)</th>
                        <th>Thực hiện đầy đủ (1đ)</th>
                        <th>Thực hiện chưa đạt (0.5đ)</th>
                        <th>Không thực hiện (0đ)</th>
                    </tr>
                </thead>
                <tbody id="table-body"></tbody>
            </table>

            <div class="ddtk-label">Giám sát viên</div>
            <div style="margin-top: 80px; font-size: 13px; line-height: 1.5;">
                <strong>Lưu ý:</strong><br>
                Một số ghi chú:<br>
                + NVYT sử dụng câu hỏi mở (với thông tin: họ tên, năm sinh/ tuổi, địa chỉ) và kiểm tra lại sau khi NB/ thân nhân trả lời;<br>
                + Yếu tố giới tính không áp dụng tại: Phòng khám tuyến vú, phụ khoa;<br>
                &nbsp;&nbsp;&nbsp;&nbsp;Khoa Ngoại tuyến vú, Ngoại phụ khoa, Xạ trị phụ khoa;<br>
                + Yếu tố địa chỉ: Phải đầy đủ 3 cấp thông tin cư trú (xã/phường/thị trấn, quận/huyện/thành phố/tỉnh);<br>
                Sau khi đánh giá chi tiết từng yếu tố đính kèm của mục 1 (đúng người bệnh) → tiến hành kết luận nội dung “đúng người bệnh” như sau:<br>
                “Đạt”: khi ít nhất 3 yếu tố được đánh giá ở cột “thực hiện đầy đủ - 1đ”;<br>
                “Chưa đạt”: khi đánh giá ít hơn 3 yếu tố; hoặc khi đánh giá từ 3 yếu tố trở lên nhưng chỉ có 2 yếu tố ở cột “thực hiện đầy đủ - 1đ”;<br>
                “Không đạt”: khi tiếp xúc người bệnh mà không xác nhận lại thông tin của người bệnh;<br>
                Các nội dung còn lại đánh giá theo thang điểm có sẵn.
            </div>

            <script>
                const steps = [
                    "Họ tên người bệnh",
                    "Năm sinh/ tuổi",
                    "Địa chỉ",
                    "Giới tính",
                    "Mã số người bệnh",
                    "Vòng tay định danh",
                    "Kết luận bảng kiểm"
                ];

                const tableBody = document.getElementById('table-body');
                tableBody.innerHTML = '';

                steps.forEach((step, index) => {
                    const row = document.createElement('tr');

                    if (index === 6) {
                        // Dòng 7: gộp 2 ô đầu, bố cục đặc biệt
                        row.innerHTML = `
                    <td colspan="2" style="text-align:center;">${step}</td>

                    <td colspan="3" style="text-align:center;">
                      <div style="display: flex; flex-direction: column; align-items: flex-start; gap: 5px;">
                        <div style="display: flex; gap: 10px;">
                          <label><input type="checkbox" name="step${index}-nvyt1" value="dat"> Đạt</label>
                          <label><input type="checkbox" name="step${index}-nvyt1" value="chuadat"> Chưa đạt</label>
                        </div>
                        <label><input type="checkbox" name="step${index}-nvyt1" value="khongdat"> Không đạt</label>
                      </div>
                    </td>

                    <td colspan="3" style="text-align:center;">
                      <div style="display: flex; flex-direction: column; align-items: flex-start; gap: 5px;">
                        <div style="display: flex; gap: 10px;">
                          <label><input type="checkbox" name="step${index}-nvyt2" value="dat"> Đạt</label>
                          <label><input type="checkbox" name="step${index}-nvyt2" value="chuadat"> Chưa đạt</label>
                        </div>
                        <label><input type="checkbox" name="step${index}-nvyt2" value="khongdat"> Không đạt</label>
                      </div>
                    </td>
                  `;
                    } else {
                        row.innerHTML = `
                    <td style="text-align:center;">${index + 1}</td>
                    <td>${step}</td>
                    <td style="text-align:center;">
                      <input type="radio" name="step${index}-nvyt1" value="1">
                    </td>
                    <td style="text-align:center;">
                      <input type="radio" name="step${index}-nvyt1" value="0.5">
                    </td>
                    <td style="text-align:center;">
                      <input type="radio" name="step${index}-nvyt1" value="0">
                    </td>
                    <td style="text-align:center;">
                      <input type="radio" name="step${index}-nvyt2" value="1">
                    </td>
                    <td style="text-align:center;">
                      <input type="radio" name="step${index}-nvyt2" value="0.5">
                    </td>
                    <td style="text-align:center;">
                      <input type="radio" name="step${index}-nvyt2" value="0">
                    </td>
                  `;
                    }

                    tableBody.appendChild(row);
                });
            </script>

</body>
</html>


